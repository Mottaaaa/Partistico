<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ExerciseActivities.ExerciseProfileActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:gravity="center">

            <VideoView
                android:id="@+id/vv_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/test" />

        <FrameLayout
            android:id="@+id/graph_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_bad_background_top"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:background="#14ff0000" />

                <TextView
                    android:id="@+id/tv_medium_background_top"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:background="#14ffff00" />

                <TextView
                    android:id="@+id/tv_good_background"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:background="#1400ff00" />

                <TextView
                    android:id="@+id/tv_medium_background_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:background="#14ffff00" />

                <TextView
                    android:id="@+id/tv_bad_background_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:background="#14ff0000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_bad_top"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:gravity="left|center_vertical"
                        android:text="Bad"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tv_medium_top"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:gravity="left|center_vertical"
                        android:text="Medium"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tv_good"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:gravity="left|center_vertical"
                        android:text="Good"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tv_medium_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:gravity="left|center_vertical"
                        android:text="Medium"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tv_bad_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:gravity="left|center_vertical"
                        android:text="Bad"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="8sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/vertical_bar"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#808080" />

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph"
                    android:layout_width="0dp"
                    android:layout_height="200dip"
                    android:layout_weight="1" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>